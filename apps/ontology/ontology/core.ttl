:Ontology a owl:Ontology ;
  rdfs:label "Agentic Trust Core Ontology" ;
  owl:versionInfo "0.1.0" ;
  owl:imports <http://www.w3.org/ns/prov-o#> ;
  owl:imports <http://purl.org/net/p-plan#> ;
  owl:imports <http://purl.org/dc/terms/> .

:Agent a owl:Class ;
  rdfs:label "Agent" .

:TrustAssertion a owl:Class ;
  rdfs:label "Trust Assertion" .

:hasTrustScore a owl:DatatypeProperty ;
  rdfs:label "has trust score" ;
  rdfs:domain :TrustAssertion ;
  rdfs:range xsd:decimal .

########
# Intent/Task orchestration core
########

:IntentType a owl:Class ;
  rdfs:label "Intent Type" ;
  rdfs:subClassOf skos:Concept .

:TaskType a owl:Class ;
  rdfs:label "Task Type" ;
  rdfs:subClassOf skos:Concept .

:Skill a owl:Class ;
  rdfs:label "Skill" ;
  rdfs:subClassOf oasf:Skill .

:IntentTaskMapping a owl:Class ;
  rdfs:label "Intent Task Mapping" .

:TaskSkillRequirement a owl:Class ;
  rdfs:label "Task Skill Requirement" .

:intentTypeToTaskType a owl:ObjectProperty ;
  rdfs:label "intent type to task type" ;
  rdfs:domain :IntentType ;
  rdfs:range :TaskType .

:mapsIntentType a owl:ObjectProperty ;
  rdfs:label "maps intent type" ;
  rdfs:domain :IntentTaskMapping ;
  rdfs:range :IntentType .

:mapsTaskType a owl:ObjectProperty ;
  rdfs:label "maps task type" ;
  rdfs:domain :IntentTaskMapping ;
  rdfs:range :TaskType .

:requiresSkill a owl:ObjectProperty ;
  rdfs:label "requires skill" ;
  rdfs:domain :IntentTaskMapping ;
  rdfs:range oasf:Skill .

:mayUseSkill a owl:ObjectProperty ;
  rdfs:label "may use skill" ;
  rdfs:domain :IntentTaskMapping ;
  rdfs:range oasf:Skill .

:SkillType a owl:Class ;
  rdfs:label "Skill Type" ;
  rdfs:subClassOf skos:Concept .

:Intent a owl:Class ;
  rdfs:label "Intent" ;
  rdfs:subClassOf prov:Entity .

:Task a owl:Class ;
  rdfs:label "Task" ;
  rdfs:subClassOf prov:Activity .

:Plan a owl:Class ;
  rdfs:label "Plan" ;
  rdfs:subClassOf prov:Plan, p-plan:Plan .

:PlanStep a owl:Class ;
  rdfs:label "Plan Step" ;
  rdfs:subClassOf p-plan:Step .

:Action a owl:Class ;
  rdfs:label "Action" ;
  rdfs:subClassOf prov:Activity .

:ActionType a owl:Class ;
  rdfs:label "Action Type" ;
  rdfs:subClassOf skos:Concept .

:hasIntentType a owl:ObjectProperty ;
  rdfs:label "has intent type" ;
  rdfs:domain :Intent ;
  rdfs:range :IntentType .

:hasTaskType a owl:ObjectProperty ;
  rdfs:label "has task type" ;
  rdfs:domain :Task ;
  rdfs:range :TaskType .

:planForIntent a owl:ObjectProperty ;
  rdfs:label "plan for intent" ;
  rdfs:domain :Plan ;
  rdfs:range :Intent .

:hasStep a owl:ObjectProperty ;
  rdfs:label "has step" ;
  rdfs:domain :Plan ;
  rdfs:range :PlanStep .

:stepOrder a owl:DatatypeProperty ;
  rdfs:label "step order" ;
  rdfs:domain :PlanStep ;
  rdfs:range xsd:integer .

:stepTaskType a owl:ObjectProperty ;
  rdfs:label "step task type" ;
  rdfs:domain :PlanStep ;
  rdfs:range :TaskType .

:stepActionType a owl:ObjectProperty ;
  rdfs:label "step action type" ;
  rdfs:domain :PlanStep ;
  rdfs:range :ActionType .

:usesSkill a owl:ObjectProperty ;
  rdfs:label "uses skill" ;
  rdfs:domain prov:Activity ;
  rdfs:range oasf:Skill .

:hasSkillType a owl:ObjectProperty ;
  rdfs:label "has skill type" ;
  rdfs:domain oasf:Skill ;
  rdfs:range :SkillType .

:targetOrganization a owl:DatatypeProperty ;
  rdfs:label "target organization" ;
  rdfs:domain :Intent ;
  rdfs:range xsd:string .

:desiredStatus a owl:DatatypeProperty ;
  rdfs:label "desired status" ;
  rdfs:domain :Intent ;
  rdfs:range xsd:string .

:actionTarget a owl:DatatypeProperty ;
  rdfs:label "action target" ;
  rdfs:domain :Action ;
  rdfs:range xsd:string .

:actionTool a owl:DatatypeProperty ;
  rdfs:label "action tool" ;
  rdfs:domain :Action ;
  rdfs:range xsd:string .

:actionParametersJson a owl:DatatypeProperty ;
  rdfs:label "action parameters json" ;
  rdfs:domain :Action ;
  rdfs:range xsd:string .

:requiresSkillLevel a owl:DatatypeProperty ;
  rdfs:label "requires skill level" ;
  rdfs:domain :IntentTaskMapping ;
  rdfs:range xsd:string .

:requiresEvidence a owl:DatatypeProperty ;
  rdfs:label "requires evidence" ;
  rdfs:domain :IntentTaskMapping ;
  rdfs:range xsd:string .

:IntentTaxonomy a skos:ConceptScheme ;
  rdfs:label "Intent Taxonomy" .

:TaskTaxonomy a skos:ConceptScheme ;
  rdfs:label "Task Taxonomy" .

:intent.validateAgentIdentity
  a skos:Concept, :IntentType ;
  skos:inScheme :IntentTaxonomy ;
  skos:prefLabel "Validate agent identity"@en ;
  skos:altLabel "Verify agent identity"@en ;
  skos:broader :intent.establishTrust .

:task.performNameValidation
  a skos:Concept, :TaskType ;
  skos:inScheme :TaskTaxonomy ;
  skos:prefLabel "Perform name validation"@en ;
  skos:broader :task.performValidation .

:mapping.validateIdentity.name
  a :IntentTaskMapping ;
  :mapsIntentType :intent.validateAgentIdentity ;
  :mapsTaskType :task.performNameValidation ;
  :requiresSkill <https://agentictrust.io/ontology/oasf#skill/governance_and_trust/trust/trust_validate_name> ;
  :mayUseSkill <https://agentictrust.io/ontology/oasf#skill/governance_and_trust/trust/trust_validate_account> .

########
# Example: "Join the Writers Guild" (WGA-style regulated membership)
########

:intentType.membershipQualification
