  oasf:key "professional_membership/writer/credits_aggregate" ;
  oasf:caption "Writing credit aggregation & normalization" ;
  oasf:description "Collect, verify, and normalize writing credits and supporting documents (e.g., credits databases, contracts, pay stubs, attestations)." ;
  oasf:category "professional_membership" ;
  :hasSkillType :skillType.credentialEvidence .

<https://agentictrust.io/ontology/oasf#skill/professional_membership/guild/application_submit>
  a oasf:Skill ;
  oasf:key "professional_membership/guild/application_submit" ;
  oasf:caption "Guild application submission" ;
  oasf:description "Submit a guild membership application with required evidence and fees; return receipt/reference id." ;
  oasf:category "professional_membership" ;
  :hasSkillType :skillType.applicationExecution .

<https://agentictrust.io/ontology/oasf#skill/professional_membership/guild/application_monitor>
  a oasf:Skill ;
  oasf:key "professional_membership/guild/application_monitor" ;
  oasf:caption "Guild application status monitoring" ;
  oasf:description "Monitor submitted application status and notify stakeholders of changes (periodic polling or portal notifications)." ;
  oasf:category "professional_membership" ;
