# SPARQL UPDATE to clear GraphDB contexts used by graphdb:ingest
# 
# Usage (via GraphDB Workbench SPARQL editor, or curl):
#   POST /repositories/{repository}/statements
#   Content-Type: application/sparql-update
#
# Or use the GraphDB REST API:
#   curl -X POST "http://localhost:7200/repositories/agentictrust/statements" \
#     -H "Content-Type: application/sparql-update" \
#     --data-binary @clear-graphdb.sparql

# Clear ontology context
DELETE {
  GRAPH <https://www.agentictrust.io/graph/ontology> {
    ?s ?p ?o
  }
}
WHERE {
  GRAPH <https://www.agentictrust.io/graph/ontology> {
    ?s ?p ?o
  }
};

# Clear agents data context
DELETE {
  GRAPH <https://www.agentictrust.io/graph/data/agents> {
    ?s ?p ?o
  }
}
WHERE {
  GRAPH <https://www.agentictrust.io/graph/data/agents> {
    ?s ?p ?o
  }
};

# Optional: clear default graph (if any data exists there)
DELETE {
  ?s ?p ?o
}
WHERE {
  ?s ?p ?o
  FILTER NOT EXISTS {
    GRAPH ?g { ?s ?p ?o }
  }
}

