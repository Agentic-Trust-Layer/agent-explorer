@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix core: <https://agentictrust.io/ontology/core#> .
@prefix erc8004: <https://agentictrust.io/ontology/erc8004#> .
@prefix erc8092: <https://agentictrust.io/ontology/erc8092#> .

core:Diagram_TrustBuildingERCMapping a owl:Ontology ;
  rdfs:label "TrustBuildingRegistryMapping" .

### Abstract pattern nodes
core:TrustSituation a owl:Class .
core:TrustAssertion a owl:Class .
core:VerificationTrustAssertion a owl:Class ; rdfs:subClassOf core:TrustAssertion .
core:ReputationTrustAssertion a owl:Class ; rdfs:subClassOf core:TrustAssertion .
core:Relationship a owl:Class .
core:RelationshipTrustAssertion a owl:Class ; rdfs:subClassOf core:TrustAssertion .

core:generatedSituation a owl:ObjectProperty ;
  rdfs:domain core:TrustAssertion ;
  rdfs:range core:TrustSituation .

core:assertsRelationship a owl:ObjectProperty ;
  rdfs:domain core:RelationshipTrustAssertion ;
  rdfs:range core:Relationship .

core:qualifiesRelationship a owl:ObjectProperty ;
  rdfs:domain core:TrustAssertion ;
  rdfs:range core:Relationship .

### ERC-8004 validation registry
erc8004:ValidationRequestSituation a owl:Class ; rdfs:subClassOf core:TrustSituation .
erc8004:ValidationResponse a owl:Class ; rdfs:subClassOf core:VerificationTrustAssertion .

erc8004:validationRespondsToRequest a owl:ObjectProperty ;
  rdfs:domain erc8004:ValidationResponse ;
  rdfs:range erc8004:ValidationRequestSituation .

erc8004:validationValidator a owl:ObjectProperty ;
  rdfs:domain erc8004:ValidationRequestSituation ;
  rdfs:range prov:Agent .

### ERC-8004 reputation registry
erc8004:Feedback a owl:Class ; rdfs:subClassOf core:ReputationTrustAssertion .
erc8004:feedbackClient a owl:ObjectProperty ;
  rdfs:domain erc8004:Feedback ;
  rdfs:range prov:Agent .

erc8004:feedbackSkill a owl:ObjectProperty ;
  rdfs:domain erc8004:Feedback ;
  rdfs:range core:AgentSkillClassification .

core:AgentSkillClassification a owl:Class .

### ERC-8092 associated accounts storage (relationship assertions)
erc8092:RelationshipERC8092 a owl:Class ; rdfs:subClassOf core:Relationship .
erc8092:RelationshipAssertionERC8092 a owl:Class ; rdfs:subClassOf core:RelationshipTrustAssertion .
erc8092:RelationshipAccount a owl:Class .

erc8092:initiatorAccount a owl:ObjectProperty ;
  rdfs:domain erc8092:RelationshipAssertionERC8092 ;
  rdfs:range erc8092:RelationshipAccount .

erc8092:approverAccount a owl:ObjectProperty ;
  rdfs:domain erc8092:RelationshipAssertionERC8092 ;
  rdfs:range erc8092:RelationshipAccount .


