@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix p-plan: <http://purl.org/net/p-plan#> .
@prefix core: <https://agentictrust.io/ontology/core#> .

core:Diagram_TrustBuildingAbstract a owl:Ontology ;
  rdfs:label "TrustBuildingAbstract" .

### Core trust graph nodes
core:TrustDescription a owl:Class ;
  rdfs:label "TrustPlan(TrustDescription)" ;
  rdfs:subClassOf prov:Plan, p-plan:Plan .

core:TrustSituation a owl:Class ;
  rdfs:label "TrustSituation(TrustEvent)" ;
  rdfs:subClassOf prov:Activity .

core:TrustAssertion a owl:Class ;
  rdfs:label "TrustAssertion(DurableClaim)" ;
  rdfs:subClassOf prov:Entity .

core:VerificationTrustAssertion a owl:Class ;
  rdfs:subClassOf core:TrustAssertion .

core:ReputationTrustAssertion a owl:Class ;
  rdfs:subClassOf core:TrustAssertion .

core:Relationship a owl:Class ;
  rdfs:subClassOf prov:Entity .

core:RelationshipTrustAssertion a owl:Class ;
  rdfs:subClassOf core:TrustAssertion .

### Core edges (trust graph overlay)
core:hasSituationDescription a owl:ObjectProperty ;
  rdfs:domain core:TrustSituation ;
  rdfs:range core:TrustDescription .

core:generatedSituation a owl:ObjectProperty ;
  rdfs:domain core:TrustAssertion ;
  rdfs:range core:TrustSituation .

core:aboutSubject a owl:ObjectProperty ;
  rdfs:domain core:TrustAssertion ;
  rdfs:range prov:Entity .

core:assertsRelationship a owl:ObjectProperty ;
  rdfs:domain core:RelationshipTrustAssertion ;
  rdfs:range core:Relationship .

core:qualifiesRelationship a owl:ObjectProperty ;
  rdfs:domain core:TrustAssertion ;
  rdfs:range core:Relationship .

### PROV association / evidence (for “who validated” and “what evidence was used”)
prov:Agent a owl:Class .

prov:wasAssociatedWith a owl:ObjectProperty ;
  rdfs:domain prov:Activity ;
  rdfs:range prov:Agent .

prov:used a owl:ObjectProperty ;
  rdfs:domain prov:Activity ;
  rdfs:range prov:Entity .


