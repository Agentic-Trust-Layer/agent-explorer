{
  "name": "erc8004-indexer-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:indexer": "pnpm --filter erc8004-indexer dev",
    "dev:indexer:agent": "pnpm --filter erc8004-indexer dev:agent",
    "dev:indexer:graphql": "pnpm --filter erc8004-indexer dev:graphql",
    "dev:badge-admin": "pnpm --filter badge-admin dev",
    "dev:agent-kb": "pnpm --filter agent-kb dev",
    "build:indexer": "pnpm --filter erc8004-indexer build",
    "build:badge-admin": "pnpm --filter badge-admin build",
    "build:ontology": "pnpm --filter @agentic-trust/ontology build",
    "build:agent-kb": "pnpm --filter agent-kb build",
    "start:agent-kb": "pnpm --filter agent-kb start",
    "build:all": "pnpm build:ontology && pnpm build:indexer && pnpm build:agent-kb && pnpm build:badge-admin",
    "dev:all": "pnpm dev:indexer & pnpm dev:agent-kb & pnpm dev:badge-admin"
  },
  "packageManager": "pnpm@9.7.0",
  "dependencies": {
    "@thenamespace/indexer": "^1.0.2",
    "@thenamespace/mint-manager": "^1.1.0"
  }
}
